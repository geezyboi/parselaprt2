{
  "name": "Sci-Hub",
  "version": "0.1.0",
  "manifest_version": 10,
  "description": "Sci-Hub extension for Chromium browsers",
  "homepage_url": "https://sci-hub.ren/",
   "update_url": "https://sci-hub.ren/update",
 "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
